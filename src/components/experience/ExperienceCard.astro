---
type Props = {
  name: string;
  duration: string;
  role: string;
  description: string;
};

const { name, duration, description, role } = Astro.props;
---

<article
  class="relative group flex w-full flex-col gap-2 rounded-md border border-neutral-700 p-4 transition-all duration-300 overflow-hidden"
>
  <!-- Contenido -->
  <header
    class="flex flex-col gap-2 sm:flex-row sm:justify-between items-start relative z-10"
  >
    <div>
      <p class="text-lg font-semibold text-neutral-50">{name}</p>
      <span class="text-xs text-red-400/90">{role}</span>
    </div>
    <span class="text-sm text-neutral-400">{duration}</span>
  </header>

  <main class="relative z-10">
    <p class="text-sm text-neutral-300/80">{description}</p>
  </main>

  <!-- Brillo en el borde con ::before -->
  <div
    class="pointer-events-none absolute inset-0 rounded-md
      before:absolute before:inset-0 before:rounded-md before:border before:border-white/50
      before:opacity-0 before:transition-opacity before:duration-500
      group-hover:before:opacity-100"
  >
  </div>

  <!-- Shine effect -->
  <div
    class="absolute top-0 -left-1/3 w-1/2 h-full bg-gradient-to-r from-transparent via-white/10 to-transparent
      skew-x-12 opacity-0 group-hover:opacity-100 transition duration-700 group-hover:translate-x-[200%]"
  >
  </div>
</article>
