---
import { SITE_URL } from "@/data/config";
import type { HeadTags } from "@/types/headtags";
import { SEO } from "astro-seo";
import { DEFAUL_TITLE_PAGE, DEFAUL_DESCRIPTION_PAGE } from "@/utils/config";
type Props = HeadTags;

const { title, description, noindex, og } = Astro.props;

const DEFAULT_URL_SITE = SITE_URL;

const openGraph = {
  title: title || og?.title || DEFAUL_TITLE_PAGE,
  type: og?.type || "website",
  description: og?.description || DEFAUL_DESCRIPTION_PAGE,
  image: og?.image || "/og-image.jpg",
  url: DEFAULT_URL_SITE,
  alt: og?.alt || "SaulDev portfolio",
};
---

<head>
  <SEO
    charset="UTF-8"
    title={openGraph.title}
    description={description || DEFAUL_DESCRIPTION_PAGE}
    noindex={noindex || false}
    openGraph={{
      basic: {
        title: openGraph.title,
        type: openGraph.type,
        image: openGraph.image,
      },
      image: {
        alt: openGraph.alt,
      },
    }}
    twitter={{
      creator: "@saul_dev21",
    }}
    extend={{
      link: [
        { rel: "icon", href: "/favicon.svg" },
        { rel: "sitemap", href: "/sitemap.xml" },
      ],
      meta: [
        { name: "viewport", content: "width=device-width, initial-scale=1" },
        { name: "generator", content: Astro.generator },
        {
          name: "twitter:image",
          content: openGraph.image,
        },
        { name: "twitter:card", content: "summary_large_image" },
        { name: "twitter:title", content: openGraph.title },
        { name: "twitter:description", content: openGraph.description },
        { name: "twitter:site", content: "@saul_dev21" },
      ],
    }}
  />
</head>
